@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - CraftingProject</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/CraftingProject.styles.css" asp-append-version="true" />

    <meta charset="utf-8" />
    <title>Admin Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f8;
            padding: 50px;
        }

        .container {
            max-width: 1000px;
            margin: auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        select, table {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
        }

        table {
            border-collapse: collapse;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .stock {
            font-size: 18px;
            font-weight: bold;
            color: green;
            margin-top: -10px;
        }
    </style>

    <script>
        function showData() {
            const craft = document.getElementById('craftDropdown').value;
            const allTables = document.querySelectorAll('.dataTable');
            const stockDiv = document.getElementById('stock');

            allTables.forEach(table => table.style.display = 'none');
            stockDiv.style.display = 'none';

            if (craft) {
                document.getElementById(craft).style.display = 'table';
                if (craft === 'paperCraft') {
                    stockDiv.style.display = 'block';
                }
            }
        }
    </script>
</head>

<body>
    <div class="container">


        <header>
            <nav style="display: flex; justify-content: space-between; align-items: center; padding: 15px; background-color: #f8f9fa; border-bottom: 2px solid #ddd;">
                <h2 style="margin: 0;">Admin Dashboard</h2>

                @if (Context.Session.GetString("Username") != null)
                {
                    <a href="/Login/Logout" class="btn btn-danger">Logout</a>
                }
            </nav>
        </header>

        <br />
        <label for="craftDropdown">Select Craft Category:</label>
        <select id="craftDropdown" onchange="showData()">
            <option value="">-- Select --</option>
            <option value="paperCraft">Paper Craft</option>
            <option value="bottleCraft">Bottle Craft</option>
            <option value="fibreCraft">Fibre Craft</option>
